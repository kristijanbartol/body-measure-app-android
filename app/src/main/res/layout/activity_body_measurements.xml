<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BodyMeasurementsActivity">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textMeasure1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Head circumference" />

            <TextView
                android:id="@+id/textMeasure2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Neck circumference" />

            <TextView
                android:id="@+id/textMeasure3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Shoulder-to-crotch" />

            <TextView
                android:id="@+id/textMeasure4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. Chest circumference" />

            <TextView
                android:id="@+id/textMeasure5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5. Waist circumference" />

            <TextView
                android:id="@+id/textMeasure6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6. Hip circumference" />

            <TextView
                android:id="@+id/textMeasure7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7. Wrist circumference" />

            <TextView
                android:id="@+id/textMeasure8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8. Bicep circumference" />

            <TextView
                android:id="@+id/textMeasure9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9. Forearm circumference" />

            <TextView
                android:id="@+id/textMeasure10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10. Arm length" />

            <TextView
                android:id="@+id/textMeasure11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="11. Inside-leg length" />

            <TextView
                android:id="@+id/textMeasure12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12. Thigh circumference" />

            <TextView
                android:id="@+id/textMeasure13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="13. Calf circumference" />

            <TextView
                android:id="@+id/textMeasure14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="14. Ankle circumference" />

            <TextView
                android:id="@+id/textMeasure15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="15. Shoulder breadth" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"></LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>